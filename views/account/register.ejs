<%# Content Heading %>

<% if (title) { %>
    <h1><%= title %></h1>
    <% } else {
      res.redirect('/')
    } %>

<% messages() %>

<% if (errors) { %>
  <ul class="notice">
 <% errors.array().forEach(error => { %>
   <li><%= error.msg %></li>
<%  }) %>
 </ul>
<% } %>

<p>All fields are required</p>
<form id="registerForm" action="/account/register" method="post">
    <div>
        <fieldset>
          <label for="name">First Name:</label>
          <input type="text" id="name" name="account_firstname" required>
          <label for="name">Last Name:</label>
          <input type="text" id="name" name="account_lastname" required>
          <label for="email">Email:</label>
          <input type="email" id="email" name="account_email" required pattern="(?=.*[@])">
          <label for="password">Password:</label>
          <input type="password" id="password" name="account_password" required pattern="^(?=.*\d)(?=.*[a-z])(?=.*[A-Z])(?=.*[^a-zA-Z0-9])(?!.*\s).{12,}$">
          <span>Passwords must be at least 12 characters and contain at least 1 number, 1 capital letter and 1 special character</span> 
        </fieldset>
      </div>
      <button type="submit">Register</button>
</form>