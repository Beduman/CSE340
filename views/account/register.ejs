<%# Content Heading %>

<% if (title) { %>
    <h1><%= title %></h1>
    <% } else {
      res.redirect('/')
    } %>

<% messages() %>
<p>All fields are required</p>
<form id="registerForm" action="/account/register" method="post">
    <div>
        <fieldset>
          <label for="name">First Name:</label>
          <input type="text" id="name" name="account_firstname" required>
          <label for="name">Last Name:</label>
          <input type="text" id="name" name="account_lastname" required>
          <label for="email">Email:</label>
          <input type="email" id="email" name="account_email" required>
          <label for="password">Password:</label>
          <input type="password" id="password" name="account_password" 
            required pattern="^(?=.*\d)(?=.*[a-z])(?=.*[A-Z])(?=.*[^a-zA-Z0-9])(?!.*\s).{8,}$"required>
        </fieldset>
      </div>
      <button type="submit">Register</button>
</form>